package com.nanaimostudio.utils {	import com.greensock.TweenMax;	import flash.display.MovieClip;		/**	 * ...	 * @author Boon Chew	 */	public class BlockerUtil 	{		public static function activateBlocker(mc:MovieClip, duration:Number = 0.1, alpha:Number = 0.6):void		{			TweenMax.to(mc, duration, {colorTransform:{tint:0, tintAmount:alpha}});		}				public static function deactivateBlocker(mc:MovieClip, duration:Number = 0.1):void		{			TweenMax.to(mc, duration, {colorTransform:{tint:0, tintAmount:0}});		}	}}